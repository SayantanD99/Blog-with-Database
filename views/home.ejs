<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% if (posts && posts.length > 0) { %>
  <% posts.forEach(function(post){ %>
    <h2><%= post.title %></h2>
    <p><%= post.content.substring(0, 100) + " ..." %></p>
    <a href="/posts/<%= post._id %>">Read More</a>
  <% }); %>
<% } else { %>
  <p>No posts available.</p>
<% } %>

<%- include("partials/footer"); -%>
